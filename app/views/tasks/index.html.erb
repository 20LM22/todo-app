<div id="outer-wrapper" class="mb-2 bg-info-subtle text-info-emphasis">

<h1>To-do List</h1>

<%= form_with url: "/tasks/save", method: :patch do |form| %>

<div class="all-tasks container">
<% @tasks.each do |task| %>
    <div class="wrapper">
        
        <%= form.check_box("tasks[]", {checked: task.checked, class: "checkbox", id: task.id }, 'c' + task.id.to_s, 'n' + task.id.to_s) %>
        <label id=label-<%= task.id %> for=<%= task.id %> class="strike"><%= task.task_description %></label>
       
        <%= link_to image_tag("/images/delete_icon.png"), task, data: {
            turbo_method: :delete,
        }, class: "delete-link" %>

        <%= link_to image_tag("/images/edit_icon.png"), edit_task_path(task), class: "edit-link" %>

    </div>
<% end %>

</div>

<div class="bottom-wrapper">

<%= link_to 'New Task', new_task_path, class: "button" %>
<%= form.submit "Save Selections", class: "button" %>
</div>

</div>
<% end %>

<footer class="bg-info text-center text-lg-start fixed-bottom">
    <p>Last Updated: 07/05/24</p>
</footer>

<%= javascript_include_tag 'onload.js', 'data-turbo-track': 'reload', defer: true %>
<%= javascript_include_tag 'index.js', 'data-turbo-track': 'reload', defer: true %>
