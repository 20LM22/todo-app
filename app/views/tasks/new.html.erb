<div id="outer-wrapper" class="mb-2 bg-info-subtle text-info-emphasis">

<h1>To-do List</h1>

<div class="all-tasks container">
<% @tasks.each do |task| %>
    <div class="wrapper">

        <%= check_box_tag task.id, "val", task.checked, disabled: true, class: "checkbox" %>

        <label id=label-<%= task.id %> for=<%= task.id %>><%= task.task_description %></label>
        <%= link_to 'delete', task, data: {
            turbo_method: :delete,
        }, class: "delete-link" %>
        <%= link_to 'edit', edit_task_path(task), class: "edit-link" %>
    </div>
<% end %>

<%= form_for(@task) do |f| %>
    <%= check_box_tag false, disabled: true, class: "checkbox" %>
    <%= f.text_field :task_description, class: "new-task" %>
    <%= f.submit class: "button" %>
    <%= link_to 'Cancel', root_path, class: "button" %>
<% end %>

</div>

</div>

<footer class="bg-info text-center text-lg-start fixed-bottom">
    <p>Last Updated: 07/03/24</p>
</footer>

<%= javascript_include_tag 'onload.js', 'data-turbo-track': 'reload', defer: true %>